{% include "header.html.twig" %}

<div class="content well">

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <div class="category-tree">
                    {{ categories | raw }}
                </div>
            </div>
            <div class="col-sm-10">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12">
                            <h2 class="item-name">{{ item.name }}</h2>

                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <div class="card">
                                            <img style="height: auto" class="img-card"
                                                 src="{{ item.image }}"/>
                                        </div>
                                    </div>
                                    <div class="col-xs-6">
                                        <h3>Description</h3>
                                        <p>{{ item.description }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- row -->
        </div>
    </div>
</div>

